<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_branco_rounded"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="UnusedAttribute">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_cinzaclaro_circle">

            <ImageView
                android:padding="25dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_store" />

            <ImageView
                android:padding="1dp"
                android:id="@+id/IV_estabelecimento"
                android:layout_width="120dp"
                android:layout_height="120dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <TextView
            android:id="@+id/TV_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorcinzaescuro"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Bar do AntÃ´nio" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/endereco"
                android:textColor="@color/colorcinzaescuro"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_endereco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorcinzaescuro"
                android:textSize="18sp"
                android:textStyle="italic"
                tools:text="Rua Caldas, 645 - Vila Cristina, Betim/MG" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/mesa"
                android:textColor="@color/colorcinzaescuro"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_mesa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorcinzaescuro"
                android:textSize="18sp"
                android:textStyle="italic"
                tools:text="1" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/TV_visualizarCardapio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple_primary_rounded"
        android:elevation="2dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="@string/visualizar_cardapio"
        android:textColor="@color/colorbranco"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="UnusedAttribute" />


</LinearLayout>